{
  "name": "rspv",
  "version": "1.0.0",
  "description": "Custom theme for ArcTouch challenge",
  "scripts": {
    "css:compile": "node-sass --importer node_modules/node-sass-magic-importer/dist/cli.js scss/styles.scss -o css",
    "css:prefix": "postcss --use autoprefixer -b '> 10%' css/*.css -r",
    "css:build": "npm run css:compile && npm run css:prefix",
    "css:watch": "nodemon -e scss -x \"npm run css:build\" --ignore dist",
    "watch": "nodemon -e scss,js -x \"npm run build\" --ignore dist",
    "build": "npm run css:build"
  },
  "author": "Eric Vieira",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^7.1.3",
    "bootstrap": "^4.4.1",
    "node-sass": "^4.5.3",
    "node-sass-magic-importer": "^5.2.0",
    "nodemon": "^1.12.0",
    "postcss-cli": "^4.1.0"
  }
}
